{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*",
  ],
}